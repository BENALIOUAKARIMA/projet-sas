#include <stdio.h>
#include <stdlib.h>
#include <string.h>
static int i, n, j=0;
  struct compte{
  char nom[20];
  char prenom[20];
  char cin[15];
  float montant;
  };
  struct compte info[100];
  void creationcompte(){
      printf("entrer les information du comptes :\n");
      printf("entrer le nom :\n");
      scanf("%s",info[i].nom);
      printf("entrer le prenom: \n");
      scanf("%s",info[i].prenom);
      printf("entrer le numero de cin: \n");
      scanf("%s",info[i].cin);
      printf("entrer le montant:\n");
      scanf("%f",&info[i].montant);
      printf("########le compte est creer########\n");
      i++;
   
     
      
        }
  
     void depot(){
    int i;
    char cin[20];
    float me,mr;
    printf("entrer votre cin :\t");
    scanf("%s",cin);
    for(i=0;i<n;i++)
    {
    if(strstr(cin,info[i].cin)==0)
    {
    printf(" montant entrer :\t");
    scanf("%f",&me);
    
    mr=info[i].montant+me;
    printf("montant reste : %.2f",mr);
   
    
    }
    }

    }
   void retrait(){
int i;
char cin[20];
float ms,mr;
printf("entrer votre CIN :");
scanf("%s",cin);
for(i=0;i<n;i++)
{
if(strcmp(cin,info[i].cin)==0)
{
printf("montant sortir :\t");
scanf("%f",&ms);
if(ms>info[i].montant)
{
printf(" \n impossible votre solde sup a %.2f\n",ms);
break;
}
mr=info[i].montant-ms;
printf("montant reste : %.2f",mr);
return;
}
}

    }
    void operations()
   {
    int operations;
    printf("entrer le type d opperation");
    printf("\n 1==>Retrait:\n 2==>Depot: \n");
    scanf("%d",&operations);
    switch(operations) 
        {
            case 1:
                retrait();
                break;
            case 2:
                depot();
                break;
            default:printf("**l operation n est pas valide ** ");
        }
    }
          void plusieurscomptes (){
         printf("donner les nombres des clients:\n ");
           scanf("%d",&n);
           for(i=j; i<n; i++){
               printf("donner les informations des clients %d: \n",i+1);
               printf("nom :\n");
               scanf("%s",info[i].nom);
               printf("prenom :\n");
               scanf("%s",info[i].prenom);
               printf("cin :\n");
               scanf("%s",info[i].cin);
               printf("montant :\n");
               scanf("%f",&info[i].montant);
               j++;
           }
  }
    
    
  
     /********************* menu *************/
       void menu(){
           int choix;
          
            printf("_________bienvenue a la banque___________\n");
            printf("********** entrer votre choix**********\n\n");
            printf("\t1: creer un compte\n");
            printf("\t2: creer plusieurs comptes\n");
            printf("\t3: les operations de la banque\n");
            printf("\t4: affichage\n");
            printf("\t5: fidelisation\n");
            printf("\t6: quitter application\n");
            scanf("%d",&choix);
            do
            {
       
             switch (choix)
             {
                 case 1:
                 creationcompte();
                  break;
                  case 2:
                  printf("creer plusieurs comptes: \n");
                 plusieurscomptes();
                  break;
                  case 3:
                  printf("les operations de la banque\n");
                  operations();
                  break;
                  case 4:
                  printf("affichage\n");
                  break;
                  case 5:
                  printf("fidelisation\n");
                  case 6:
                  printf("******* merci pour votre visite ********");
                  exit(0);
                  break;
                   default:
                   printf("operation non disponible\n");
                   }
    
        menu();    
   }while(choix<1 || choix>6);
   }

 
 
    
   
int main()
{
    menu();
    return 0;
}
